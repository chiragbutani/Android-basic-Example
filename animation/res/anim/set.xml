<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    
<scale android:fromXScale="1.0" android:toXScale="3.0"
    android:fromYScale="1.0" android:toYScale="3.0" android:pivotX="50%"
    android:pivotY="50%" android:fillAfter="false" android:duration="16000" />

<set>
    <alpha xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromAlpha="0.2" android:toAlpha="1.0" android:duration="4000"   />
    
    <rotate xmlns:android="http://schemas.android.com/apk/res/android"
  android:fromDegrees="20" android:toDegrees="360" android:toYScale="2.0" 
  android:pivotX="40%" android:pivotY="30%" android:duration="4000" />
    
    <translate xmlns:android="http://schemas.android.com/apk/res/android"
   android:fromXDelta="50%" android:toXDelta="0%" android:fromYDelta="600%"
   android:toYDelta="0%" android:duration="4000" android:zAdjustment="bottom" />
    
    <scale xmlns:android="http://schemas.android.com/apk/res/android"
  android:fromXScale="10" android:toXScale="5" android:fromYScale="3" android:toYScale="1"
  android:pivotX="50%" android:pivotY="50%" android:duration="4000" />
    
</set>

</set>
